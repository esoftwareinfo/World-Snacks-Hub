<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exit_main_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">


        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/ttl"
                android:layout_width="wrap_content"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/gnt_blue"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    tools:text="Do You Want to Exit ?" />

            </RelativeLayout>

            <ScrollView
                android:id="@+id/scrollll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ttl">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textAlignment="center"
                        android:textColor="@color/gnt_blue"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:text="Do You Want to Exit ?" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@+id/title1"
                        android:layout_marginTop="30dp"
                        android:clipToPadding="false"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="33"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <Button
                                android:id="@+id/Btn_Yes"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAllCaps="false"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                tools:text="Yes" />


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="33"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <Button
                                        android:id="@+id/Btn_Rate"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textAllCaps="false"
                                        android:textColor="#ffffff"
                                        android:textStyle="bold"
                                        tools:text="Rate Us" />
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="7dp"
                                    android:background="@drawable/ad_curved_shape"
                                    android:text="Ad"
                                    android:textColor="@color/gnt_white"
                                    android:textSize="7dp"
                                    android:textStyle="bold" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="33"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <Button
                                android:id="@+id/Btn_No"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAllCaps="false"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                tools:text="No" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>

            <RelativeLayout
                android:id="@+id/banner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scrollll"
                android:layout_alignParentBottom="true">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/gifImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/banner22"
                    android:layout_centerInParent="true"
                    android:padding="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/thankyou" />

                <RelativeLayout
                    android:id="@+id/banner22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center" />

            </RelativeLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>